{
  "private": true,
  "name": "storefront-remix-starter",
  "description": "",
  "license": "",
  "scripts": {
    "build:cf": "cross-env CF_PAGES=1 remix build",
    "build:nf": "cross-env NETLIFY=1 remix build",
    "build": "tailwindcss -m -i ./tailwind.css -o app/styles/app.css && remix build",
    "dev:wrangler": "wrangler pages dev ./public",
    "dev:css": "tailwindcss -w -i ./tailwind.css -o app/styles/app.css",
    "dev": "concurrently \"remix dev\"",
    "dev:cf": "npm run build:cf && concurrently \"remix watch\" \"npm run dev:wrangler\"",
    "start:cf": "cross-env NODE_ENV=production yarn run dev:wrangler",
    "start": "remix-serve build",
    "generate": "graphql-codegen --config codegen.yml",
    "prepare": "husky install"
  },
  "dependencies": {
    "@calcom/embed-react": "^1.3.0",
    "@graphql-codegen/typescript-generic-sdk": "^3.1.0",
    "@headlessui/react": "^1.7.16",
    "@heroicons/react": "^2.0.18",
    "@netlify/functions": "^1.6.0",
    "@remix-run/cloudflare": "^1.11.1",
    "@remix-run/cloudflare-pages": "^1.11.1",
    "@remix-run/netlify": "^1.11.1",
    "@remix-run/node": "^1.11.1",
    "@remix-run/react": "^1.11.1",
    "@remix-run/serve": "^1.11.1",
    "@remix-run/server-runtime": "^1.11.1",
    "@remix-validated-form/with-zod": "^2.0.6",
    "@stripe/react-stripe-js": "^2.1.2",
    "@stripe/stripe-js": "^2.0.0",
    "@tailwindcss/forms": "^0.5.4",
    "@tailwindcss/line-clamp": "^0.4.4",
    "bootstrap": "^5.3.1",
    "braintree-web-drop-in": "^1.39.1",
    "clsx": "^2.0.0",
    "cross-env": "^7.0.3",
    "graphql": "^16.7.1",
    "graphql-tag": "^2.12.6",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-bootstrap": "^2.8.0",
    "react-bootstrap-icons": "^1.10.3",
    "react-dom": "^18.2.0",
    "remix": "^1.11.1",
    "remix-auth": "^3.5.0",
    "remix-auth-socials": "^2.0.5",
    "remix-validated-form": "^5.0.2",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/introspection": "^4.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@remix-run/dev": "^1.11.1",
    "@types/braintree-web-drop-in": "^1.39.0",
    "@types/lodash": "^4.14.197",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "autoprefixer": "^10.4.15",
    "concurrently": "^8.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "postcss": "^8.4.27",
    "prettier": "^3.0.1",
    "tailwindcss": "^3.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "wrangler": "^3.5.0"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npx prettier --write"
    ]
  }
}
